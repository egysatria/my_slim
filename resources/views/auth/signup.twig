{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row d-flex justify-content-center">
    	<div class="col-md-6">
    		<div class="card">
		    	<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off" charset="utf-8">
				  	<div class="card-header text-center">
				    	Sign up
				  	</div>
				  	<div class="card-body">
			    		<div class="form-group has-error">
			    			<label for="email">Email</label>
			    			<input type="email" name="email" id="email" class="form-control" placeholder="example@domain.com">
			    		</div>
			    		<div class="form-group">
			    			<label for="name">Name</label>
			    			<input type="text" name="name" id="name" class="form-control" placeholder="Your Name">
			    		</div>
			    		<div class="form-group">
			    			<label for="password">Password</label>
			    			<input type="password" name="password" id="password" class="form-control" autocomplete="off">
			    		</div>
				  	</div>
				  	<div class="card-footer text-muted">
				   		<button type="submit" class="btn btn-outline-secondary"> Sign up </button>
				  	</div>
	    		</form>
			</div>
    	</div>
    </div>
{% endblock %}